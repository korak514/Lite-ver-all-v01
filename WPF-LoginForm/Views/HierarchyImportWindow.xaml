<Window x:Class="WPF_LoginForm.Views.HierarchyImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:WPF_LoginForm.ViewModels"
        xmlns:converters="clr-namespace:WPF_LoginForm.Converters"
        mc:Ignorable="d"
        Title="Import Hierarchy Map" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Import Data Entry Logic (Hierarchy Map)" FontSize="18" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center" />
            <!-- NEW: Download Template Button -->
            <Button Content="Download Template" Command="{Binding DownloadTemplateCommand}"
                    HorizontalAlignment="Right" Padding="10,5" Background="SeaGreen" Foreground="White" FontWeight="Bold" />
        </Grid>

        <!-- Step 1: Configuration -->
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,0,0,15" Background="#FAFAFA">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="1. Target Table:" VerticalAlignment="Center" Margin="0,0,10,10" />
                <ComboBox Grid.Column="1" ItemsSource="{Binding TableNames}" SelectedItem="{Binding SelectedTableName}" Height="25" Margin="0,0,0,10" />

                <TextBlock Grid.Row="1" Text="2. Excel File:" VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FilePath}" IsReadOnly="True" Height="25" />
                <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Command="{Binding BrowseCommand}" Margin="10,0,0,0" Padding="10,2" />
            </Grid>
        </Border>

        <!-- Step 2: Mapping & Preview -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Column Mapping List -->
            <GroupBox Header="3. Map Columns" Margin="0,0,10,0" Padding="5">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Mappings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding DbColumnName}" FontWeight="SemiBold" Foreground="#555" />
                                    <ComboBox Grid.Row="1"
                                              ItemsSource="{Binding DataContext.ExcelHeaders, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding SelectedExcelHeader, Mode=TwoWay}"
                                              Height="25" Margin="0,2,0,0" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <!-- Preview Grid -->
            <GroupBox Grid.Column="1" Header="4. Preview Data (Top 20 Rows)" Padding="5">
                <DataGrid ItemsSource="{Binding PreviewData}" AutoGenerateColumns="True" IsReadOnly="True"
                          CanUserAddRows="False" GridLinesVisibility="All" />
            </GroupBox>
        </Grid>

        <!-- Action Bar -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Update Preview" Click="UpdatePreview_Click" Margin="0,0,10,0" Padding="10,5" />
            <Button Content="Import Map" Command="{Binding ImportCommand}" Padding="15,5" Background="#FF0078D7" Foreground="White" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>