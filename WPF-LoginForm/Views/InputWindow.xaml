<Window x:Class="WPF_LoginForm.Views.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="160" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock x:Name="lblMessage" Text="Enter value:" Margin="0,0,0,10" Foreground="#333" />
            <TextBox x:Name="txtInput" Height="28" VerticalContentAlignment="Center" Padding="2" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="OK" IsDefault="True" Click="Ok_Click" Width="70" Margin="0,0,10,0" />
                <Button Content="Cancel" IsCancel="True" Click="Cancel_Click" Width="70" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>