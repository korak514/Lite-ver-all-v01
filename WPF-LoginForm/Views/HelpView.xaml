<UserControl x:Class="WPF_LoginForm.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:WPF_LoginForm.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:HelpViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Help &amp; User Guide"
                   Foreground="{StaticResource titleColor2}"
                   FontSize="28"
                   FontWeight="Bold"
                   FontFamily="Montserrat"
                   Margin="0,0,0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.3" />
            </TextBlock.Effect>
        </TextBlock>

        <!-- Content Area -->
        <Border Grid.Row="1"
                CornerRadius="10"
                BorderBrush="{StaticResource panelActiveColor}"
                BorderThickness="1"
                Background="#10FFFFFF">
            <!-- Semi-transparent background -->

            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <ItemsControl ItemsSource="{Binding HelpTopics}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Margin="0,0,0,10"
                                      IsExpanded="{Binding IsExpanded}"
                                      BorderBrush="{StaticResource panelActiveColor}"
                                      BorderThickness="1"
                                      Background="{StaticResource Brush2}">

                                <Expander.Header>
                                    <TextBlock Text="{Binding Title}"
                                               Foreground="{StaticResource titleColor2}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               FontFamily="Montserrat"
                                               Margin="10,5,0,5" />
                                </Expander.Header>

                                <Border Background="#05FFFFFF" Padding="15,10">
                                    <TextBlock Text="{Binding Content}"
                                               Foreground="#E0E0E0"
                                               FontSize="14"
                                               FontFamily="Segoe UI"
                                               TextWrapping="Wrap"
                                               LineHeight="24" />
                                </Border>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>