<Window x:Class="WPF_LoginForm.Views.ErrorDrillDownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:WPF_LoginForm.Properties"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="600" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F4F6F9">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header Stats -->
            <RowDefinition Height="*" />
            <!-- Data Grid -->
            <RowDefinition Height="Auto" />
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 1. HEADER & STATS -->
        <Border Background="#2C3E50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{x:Static p:Resources.Drill_Title}"
                               FontSize="14" Foreground="#BDC3C7" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding WindowTitle}"
                               FontSize="22" FontWeight="Bold" Foreground="White"
                               TextTrimming="CharacterEllipsis" Margin="0,5,0,0" />
                </StackPanel>

                <!-- Stats Cards -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Record Count Card -->
                    <Border Background="#34495E" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="{x:Static p:Resources.Drill_Count}"
                                       Foreground="#BDC3C7" FontSize="11" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding RecordCount}"
                                       Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>

                    <!-- Duration Card -->
                    <Border Background="#E74C3C" CornerRadius="6" Padding="15,8">
                        <StackPanel>
                            <TextBlock Text="{x:Static p:Resources.Drill_TotalDuration}"
                                       Foreground="White" Opacity="0.9" FontSize="11" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding TotalDurationText}"
                                       Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. MODERN DATA GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ErrorList}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  Background="White"
                  BorderThickness="0"
                  RowHeight="50"
                  HorizontalGridLinesBrush="#EEEEEE"
                  VerticalGridLinesBrush="Transparent">

            <DataGrid.Resources>
                <!-- Column Header Style -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Foreground" Value="#7F8C8D" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Padding" Value="10,15" />
                    <Setter Property="BorderBrush" Value="#EEEEEE" />
                    <Setter Property="BorderThickness" Value="0,0,0,2" />
                </Style>

                <!-- Cell Style -->
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="12,0" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                    <ContentPresenter VerticalAlignment="Center" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Date & Shift -->
                <DataGridTemplateColumn Header="{x:Static p:Resources.Col_DateContext}" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Date, StringFormat=dd.MMM.yyyy}"
                                           FontWeight="Bold" Foreground="#2C3E50" />
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="{x:Static p:Resources.Col_Shift}" FontSize="11" Foreground="#95A5A6" />
                                    <TextBlock Text="{Binding Shift}" FontSize="11" Foreground="#7F8C8D" Margin="4,0,0,0" FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Timeline Visual -->
                <DataGridTemplateColumn Header="{x:Static p:Resources.Col_Timeline}" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#ECF0F1" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding StartTime}" FontWeight="Bold" Foreground="#2980B9" />
                                    <TextBlock Text=" ➝ " Foreground="#BDC3C7" Margin="5,0" />
                                    <TextBlock Text="{Binding EndTime}" FontWeight="Bold" Foreground="#2980B9" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Duration -->
                <DataGridTextColumn Header="{x:Static p:Resources.Col_Duration}"
                                    Binding="{Binding DurationText}"
                                    Width="100" FontWeight="SemiBold" Foreground="#34495E" />

                <!-- Machine Code -->
                <DataGridTemplateColumn Header="{x:Static p:Resources.Col_Machine}" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="4" Padding="6,2" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding MachineCode}" FontWeight="Bold" Foreground="#2C3E50" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Error Description -->
                <DataGridTemplateColumn Header="{x:Static p:Resources.Col_Description}" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#C0392B" FontWeight="Medium"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding ErrorMessage}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 3. FOOTER -->
        <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#EEEEEE" BorderThickness="0,1,0,0">
            <Button Content="{x:Static p:Resources.Ok}"
                    Width="100" Height="35"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"
                    Background="#ECF0F1" Foreground="#2C3E50" FontWeight="Bold"
                    BorderThickness="0" />
        </Border>
    </Grid>
</Window>