<Window x:Class="WPF_LoginForm.Views.PortalSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configure Analytics Hub" Height="480" Width="800"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#09092B" Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Hub Configuration" FontSize="20" FontWeight="Bold" Foreground="#FF0078D7" />
            <TextBlock Text="Assign a Title, Description, and the target dashboard JSON file (e.g. 'finance_dashboard.json') to each module slot." Foreground="Gray" Margin="0,5,0,0" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding PortalButtons}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#181838" CornerRadius="8" Padding="15,10" Margin="0,0,15,15" BorderBrush="#2A2A5A" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="2.5*" />
                                    <ColumnDefinition Width="3.5*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Id, StringFormat='Slot {0}'}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0" Width="55" Foreground="#FFC047" />

                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Module Title" Foreground="Gray" FontSize="11" Margin="0,0,0,4" />
                                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Height="28" VerticalContentAlignment="Center" Background="#22224A" Foreground="White" BorderThickness="0" Padding="5,0" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                                    <TextBlock Text="Description" Foreground="Gray" FontSize="11" Margin="0,0,0,4" />
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="28" VerticalContentAlignment="Center" Background="#22224A" Foreground="White" BorderThickness="0" Padding="5,0" />
                                </StackPanel>

                                <!-- CHANGED: Replaced TextBox with ComboBox -->
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Dashboard JSON File" Foreground="Gray" FontSize="11" Margin="0,0,0,4" />
                                    <ComboBox ItemsSource="{Binding DataContext.AvailableDashboardFiles, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding DashboardFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Height="28" VerticalContentAlignment="Center" ToolTip="Select the JSON file saved in your Dashboard folder" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,15,0">
            <!-- Passes the Window itself so the ViewModel can close it upon saving -->
            <Button Content="Save Configuration" Command="{Binding SavePortalSettingsCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Background="#FF0078D7" Foreground="White" FontWeight="Bold" Padding="20,10" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>