<Window x:Class="WPF_LoginForm.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LoginForm.Views"
        xmlns:viewModel="clr-namespace:WPF_LoginForm.ViewModels"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindowView" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        SnapsToDevicePixels="True"
        MouseDown="Window_MouseDown"
        WindowStyle="None">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}" >
            <local:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:CustomerViewModel}">
            <local:CustomerView/>
        </DataTemplate>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="10" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>

            <Grid.ColumnDefinitions>
                <!-- Navigation menu -->
                <ColumnDefinition Width="250"/>

                <!-- Content section -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <Border CornerRadius="10,0,0,10" Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource exColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource exColor3}" Offset="0.10"/>
                        <GradientStop Color="{StaticResource exColor2}" Offset="0.85"/>
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="1"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0.4"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0.6"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal" Height="35" Margin="15,25,0,40">
                        <Image Source="/Images/biosun/logo2.png" Height="44" Width="224"/>
                    </StackPanel>

                    <!-- Menu Buttons -->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color1}"
                                 IsChecked="True"
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color2}"
                                 Command="{Binding ShowCustomerViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Users" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Customers" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color3}"
                                 Command="{Binding ShowInventoryViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Book" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Inventory" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color4}"
                                 Command="{Binding ShowReportsViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="BarChart" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Reports" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color6}"
                                 Command="{Binding ShowSettingsViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Cog" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Settings" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color6}"
                                 Command="{Binding ShowHelpViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="QuestionCircle" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Help" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <!-- Main Section -->
            <Border CornerRadius="0,10,10,0" Grid.Column="1" Margin="4,7,-4,-7">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Control bar -->
                        <RowDefinition Height="35"/>
                        <!-- header -->
                        <RowDefinition Height="35"/>
                        <!-- Content section /child View-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Control Bar-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button x:Name="btnMainMinimize" Margin="0,0,5,0"
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Click="btnMainMinimize_Click" Width="18" Height="18" Style="{StaticResource controlButton}">
                            <TextBlock Text="-" FontSize="16"/>
                        </Button>

                        <Button x:Name="btnMaximize" Margin="0,0,5,0"
                                BorderThickness="0"
                                FontSize="15"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Click="btnMaximize_Click" Width="18" Height="18" Style="{StaticResource controlButton}">
                            <fa:ImageAwesome Icon="SquareOutline" Height="15" Width="15" Foreground="White"/>
                        </Button>

                        <Button x:Name="btnMainClose"
                                BorderThickness="0"
                                Content="X"
                                Foreground="White"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Click="btnMainClose_Click" Width="18" Height="18" Style="{StaticResource controlButton}">

                        </Button>
                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0" Margin="35,0,10,0">
                            <fa:ImageAwesome Icon="Home" Height="20" Width="20" Foreground="{StaticResource titleColor2}"  />
                            <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}" />
                        </StackPanel>

                        <!--  User options  -->
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft"  VerticalAlignment="Center"  Grid.Column="1"  Margin="10,0,35,0">
                            <Button Style="{StaticResource menuButton}" Tag="{StaticResource color4}" Width="18" Height="18" BorderThickness="0" Background="Transparent">
                                <fa:ImageAwesome Icon="AngleDown" Style="{StaticResource menuButtonIcon}"  />
                            </Button>
                            <Ellipse Height="35" Width="35" Stroke="{StaticResource color2}" StrokeThickness="2" Margin="10,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Images/profile-picture.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="User not logged in" Style="{StaticResource menuButtonText}" />
                        </StackPanel>
                    </Grid>

                    <!-- Child view -->
                    <ContentControl Content="{Binding CurrentChildView}" Grid.Row="2" Margin="25" />

                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
