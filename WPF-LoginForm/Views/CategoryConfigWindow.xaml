<Window x:Class="WPF_LoginForm.Views.CategoryConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WPF_LoginForm.Properties"
        Title="{x:Static p:Resources.Str_CategoryConfig}"
        Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Text="Define rules to group specific error codes into categories."
                   Foreground="#666" Margin="0,0,0,10" />

        <!-- Rules Grid -->
        <DataGrid x:Name="RulesGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  Background="White"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  RowHeight="30"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <!-- Input Column (e.g., ACIL-STOP) -->
                <DataGridTextColumn Header="{x:Static p:Resources.Str_MappingRule}"
                                    Binding="{Binding StartsWith}"
                                    Width="*" />

                <!-- Output Column (e.g., ACIL STOP) -->
                <DataGridTextColumn Header="{x:Static p:Resources.Str_MapTo}"
                                    Binding="{Binding MapTo}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer / Save -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{x:Static p:Resources.Save}"
                    Width="100" Height="30"
                    Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>