<Window x:Class="WPF_LoginForm.Views.AddRowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LoginForm.Views"
        xmlns:models="clr-namespace:WPF_LoginForm.Models"
        xmlns:viewModels="clr-namespace:WPF_LoginForm.ViewModels"
        xmlns:p="clr-namespace:WPF_LoginForm.Properties"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:AddRowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding WindowTitle}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="500" MinHeight="300"
        MaxWidth="800" MaxHeight="700"
        UseLayoutRounding="True"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Date Selection -->
            <RowDefinition Height="*" />
            <!-- Dynamic Fields -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- 1. Date Selection Section -->
        <Border Grid.Row="0" Margin="0,0,0,15" Padding="0,0,0,15" BorderBrush="LightGray" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Static p:Resources.EntryDate}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" />

                <DatePicker SelectedDate="{Binding EntryDate, Mode=TwoWay}"
                            IsEnabled="{Binding IsDatePickerEnabled}"
                            VerticalAlignment="Center"
                            Width="150" />

                <CheckBox Content="{x:Static p:Resources.Today}"
                          IsChecked="{Binding IsDateToday, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Margin="15,0,0,0" />
            </StackPanel>
        </Border>

        <!-- 2. Dynamic Input Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="450">
            <ItemsControl ItemsSource="{Binding ColumnEntries}" Grid.IsSharedSizeScope="True">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ColumnEntry}">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="150" SharedSizeGroup="LabelColumn" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Content="{Binding ColumnName}"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   Margin="0,0,10,0" />

                            <TextBox Grid.Column="1"
                                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                     VerticalAlignment="Center"
                                     Height="26"
                                     Padding="2" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 3. Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{x:Static p:Resources.Ok}" IsDefault="True" Click="OkButton_Click"
                    Width="80" Height="30" Margin="0,0,10,0" />
            <Button Content="{x:Static p:Resources.Cancel}" IsCancel="True" Click="CancelButton_Click"
                    Width="80" Height="30" />
        </StackPanel>
    </Grid>
</Window>