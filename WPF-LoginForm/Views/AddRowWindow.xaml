<Window x:Class="WPF_LoginForm.Views.AddRowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LoginForm.Views"
        xmlns:models="clr-namespace:WPF_LoginForm.Models" 
        xmlns:viewModels="clr-namespace:WPF_LoginForm.ViewModels"
    mc:Ignorable="d"
       d:DataContext="{d:DesignInstance Type=viewModels:AddRowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding WindowTitle}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight" MinWidth="400" MaxHeight="800"
        FocusManager.FocusedElement="{Binding ElementName=FirstTextBoxInItemsControl}">


    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Dynamic Fields -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Dynamically Generated Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" MaxHeight="500">
            <!-- MODIFIED: Added Grid.IsSharedSizeScope="True" to the ItemsControl -->
            <ItemsControl ItemsSource="{Binding ColumnEntries}" Grid.IsSharedSizeScope="True">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ColumnEntry}">
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <!-- MODIFIED: Added SharedSizeGroup="LabelColumn" -->
                                <ColumnDefinition Width="Auto" MinWidth="150" SharedSizeGroup="LabelColumn"/>
                                <ColumnDefinition Width="*" MaxWidth="180" />
                            </Grid.ColumnDefinitions>

                            <Label Content="{Binding ColumnName}"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   Target="{Binding ElementName=ValueTextBox}"/>
                            <TextBox x:Name="ValueTextBox"
                                     Grid.Column="1"
                                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                     VerticalAlignment="Center"
                                     MinWidth="150"
                                     Loaded="ValueTextBox_Loaded"/>
                            <!-- Added Loaded event for focus -->
                            <!-- TODO: Consider using different controls (DatePicker, CheckBox) based on expected data type -->
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- OK and Cancel Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,35,0,0">
            <Button Content="_OK" Width="75" Margin="0,0,10,0" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="_Cancel" Width="75" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>