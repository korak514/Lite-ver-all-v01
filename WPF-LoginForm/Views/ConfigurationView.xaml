<!-- Views/ConfigurationView.xaml -->
<UserControl x:Class="WPF_LoginForm.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:WPF_LoginForm.ViewModels"
             xmlns:converters="clr-namespace:WPF_LoginForm.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:ConfigurationViewModel, IsDesignTimeCreatable=False}"
             Width="Auto" Height="Auto">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:EqualityConverter x:Key="EqualityConverter" />

        <Style TargetType="TextBlock" x:Key="HeaderTextStyle">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Margin" Value="0,10,0,2" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="4,0" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="12" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="15" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ROW 0: Header & Tabs -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Dashboard Module Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#FF0078D7" />

            <TextBlock Text="Select Chart Position:" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,2" />
            <ItemsControl ItemsSource="{Binding ChartConfigurations}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="ChartSelector" Margin="1" Style="{StaticResource {x:Type ToggleButton}}"
                                     IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <TextBlock Text="{Binding ChartPosition}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" />
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="0,10,0,5" />
        </StackPanel>

        <!-- ROW 1: Scrollable Settings -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,5,0,10" Padding="0,0,10,0"
                      Visibility="{Binding IsConfigurationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

            <StackPanel DataContext="{Binding CurrentConfiguration}">
                <CheckBox IsChecked="{Binding IsEnabled}" Content="Enable this chart" Margin="0,0,0,5" FontWeight="Bold" Foreground="#0056B3" />

                <StackPanel IsEnabled="{Binding IsEnabled}">
                    <!-- 1. Table -->
                    <TextBlock Text="Table" Style="{StaticResource HeaderTextStyle}" />
                    <ComboBox ItemsSource="{Binding DataContext.AvailableTables, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedValue="{Binding TableName}" />

                    <StackPanel Visibility="{Binding IsTableSelected, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <!-- 2. Data Structure -->
                        <TextBlock Text="Data Structure (input)" Style="{StaticResource HeaderTextStyle}" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding AvailableDataStructures}" SelectedItem="{Binding DataStructureType}" />

                            <Label Grid.Row="0" Grid.Column="1" Content="Ignore Last Rows:" Margin="10,0,2,0" VerticalAlignment="Center" Foreground="Gray" FontSize="11" />
                            <ComboBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding AvailableIgnoreCounts}" SelectedItem="{Binding RowsToIgnore}" MinWidth="45" />

                            <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,6,0,0" Foreground="Gray" FontSize="11"
                                      IsChecked="{Binding UseInvariantCultureForNumbers, Mode=TwoWay}"
                                      Content="Use '.' for decimals and ',' for thousands (e.g. 1,234.56)" />
                        </Grid>

                        <!-- 3. Chart Type -->
                        <TextBlock Text="Chart Type" Style="{StaticResource HeaderTextStyle}" />
                        <Grid>
                            <ComboBox ItemsSource="{Binding ChartTypes}" SelectedItem="{Binding ChartType}"
                                      IsEnabled="{Binding CanChangeChartType}"
                                      Visibility="{Binding IsCartesianChart, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <TextBlock Text="Pie Chart (Fixed for this position)" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Gray" FontStyle="Italic" FontSize="12"
                                       Visibility="{Binding IsPieChart, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </Grid>

                        <!-- ========================================== -->
                        <!-- CARTESIAN (Line/Bar) CONFIGURATION         -->
                        <!-- ========================================== -->
                        <StackPanel Visibility="{Binding IsCartesianChart, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <!-- 4. Category (X axis) -->
                            <TextBlock Text="Category (X axis)" Style="{StaticResource HeaderTextStyle}" />
                            <ComboBox ItemsSource="{Binding DataContext.AvailableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding DateColumn}" />

                            <!-- 5. Group by -->
                            <TextBlock Text="Group by" Style="{StaticResource HeaderTextStyle}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.AvailableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          SelectedItem="{Binding SplitByColumn}" />
                                <Button Grid.Column="1" Content="Clear" Command="{Binding ClearSplitByCommand}" Margin="5,0,0,0" Padding="10,0" Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1" Cursor="Hand" />
                            </Grid>

                            <!-- NEW: Select All & Expander -->
                            <Expander Header="Select specific items to display" IsExpanded="False" FontSize="11" Foreground="#0056B3" Margin="0,4,0,0"
                                      Visibility="{Binding HasSplitByColumn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Border Background="#FDFDFD" BorderBrush="#EAEAEA" BorderThickness="1" CornerRadius="4" MaxHeight="180" Margin="0,2,0,0">
                                    <StackPanel>
                                        <!-- Select All Checkbox -->
                                        <CheckBox Content="Select All" IsChecked="{Binding IsAllSplitCategoriesSelected, Mode=TwoWay}" Margin="7,5,5,5" FontWeight="Bold" Foreground="#0078D7" />
                                        <Separator Margin="5,0,5,2" Background="#EAEAEA" />

                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding AvailableSplitCategories}" Margin="2">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="5,2" Foreground="#444" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </Expander>

                            <!-- 6. Value Columns (Y axis) -->
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}">
                                        <Setter Property="Text" Value="Value Columns (Y axis)" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPriceTrendChart}" Value="True">
                                                <Setter Property="Text" Value="Price Trend (1st = Revenue, 2nd = KG/Weight)" />
                                                <Setter Property="Foreground" Value="#D84315" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <ItemsControl ItemsSource="{Binding Series}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.AvailableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      SelectedItem="{Binding ColumnName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <Button Grid.Column="1" Content=" ✕ " Foreground="White" Background="#D14545" FontWeight="Bold" Margin="5,0,0,0" Padding="6,0" BorderThickness="0"
                                                    Command="{Binding DataContext.CurrentConfiguration.RemoveSeriesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Cursor="Hand">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="3" />
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button Content="+ Add Value Column" Margin="0,4,0,0" Padding="6,4" HorizontalAlignment="Left" FontSize="11"
                                    Command="{Binding AddSeriesCommand}" Background="#E5F1FB" Foreground="#0078D7" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" />

                            <!-- Aggregation -->
                            <StackPanel Visibility="{Binding IsDailyDateStructure, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Chart Aggregation" Style="{StaticResource HeaderTextStyle}" />
                                <ComboBox ItemsSource="{Binding AggregationOptions}" SelectedItem="{Binding AggregationType}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- ========================================== -->
                        <!-- PIE CHART CONFIGURATION                    -->
                        <!-- ========================================== -->
                        <StackPanel Visibility="{Binding IsPieChart, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <TextBlock Text="Date Column (for Dashboard Filter)" Style="{StaticResource HeaderTextStyle}" />
                            <ComboBox ItemsSource="{Binding DataContext.AvailableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding DateColumn}" />

                            <TextBlock Text="Group by (Slices)" Style="{StaticResource HeaderTextStyle}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.AvailableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          SelectedItem="{Binding SplitByColumn}" />
                                <Button Grid.Column="1" Content="Clear" Command="{Binding ClearSplitByCommand}" Margin="5,0,0,0" Padding="12,0" Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1" Cursor="Hand" />
                            </Grid>

                            <Expander Header="Select specific slices to display" IsExpanded="False" FontSize="11" Foreground="#0056B3" Margin="0,4,0,0"
                                      Visibility="{Binding HasSplitByColumn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Border Background="#FDFDFD" BorderBrush="#EAEAEA" BorderThickness="1" CornerRadius="4" MaxHeight="180" Margin="0,2,0,0">
                                    <StackPanel>
                                        <CheckBox Content="Select All" IsChecked="{Binding IsAllSplitCategoriesSelected, Mode=TwoWay}" Margin="7,5,5,5" FontWeight="Bold" Foreground="#0078D7" />
                                        <Separator Margin="5,0,5,2" Background="#EAEAEA" />

                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding AvailableSplitCategories}" Margin="2">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="5,2" Foreground="#444" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </Expander>

                            <TextBlock Text="Label Appearance:" FontSize="11" Foreground="Gray" Margin="0,8,0,2" />
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <CheckBox Content="Hide Numbers" IsChecked="{Binding HideNumbersInLabels}" Margin="0,0,15,0" Foreground="#555" />
                                <CheckBox Content="Simplify (First Word Only)" IsChecked="{Binding SimplifyLabels}" Foreground="#555" />
                            </StackPanel>

                            <TextBlock Text="Data to Sum (Values)" Style="{StaticResource HeaderTextStyle}" />
                            <ItemsControl ItemsSource="{Binding Series}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.AvailableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      SelectedItem="{Binding ColumnName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <Button Grid.Column="1" Content=" ✕ " Foreground="White" Background="#D14545" FontWeight="Bold" Margin="5,0,0,0" Padding="6,0" BorderThickness="0"
                                                    Command="{Binding DataContext.CurrentConfiguration.RemoveSeriesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Cursor="Hand">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="3" />
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="+ Add Data Column" Margin="0,4,0,0" Padding="6,4" HorizontalAlignment="Left" FontSize="11"
                                    Command="{Binding AddSeriesCommand}" Background="#E5F1FB" Foreground="#0078D7" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- ROW 2: Fixed Save Button -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,10,0,0" Margin="0,5,0,0">
            <Button Content="Apply and Close"
                    Command="{Binding ApplyCommand}"
                    Padding="0,10"
                    Background="#0078D7" Foreground="White"
                    FontWeight="Bold" FontSize="13" Cursor="Hand" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4" />
                    </Style>
                </Button.Resources>
            </Button>
        </Border>
    </Grid>
</UserControl>