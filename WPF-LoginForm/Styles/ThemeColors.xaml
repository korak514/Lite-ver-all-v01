<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1. BACKGROUNDS -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#050348" />
    <!-- Main Window Background -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#140B85" />
    <!-- Headers/Panels -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#1F2125" />
    <!-- TextBoxes/Combos -->

    <!-- 2. PRIMARY ACTIONS (Buttons, Headers) -->
    <!-- Your Color: #0064f1 -->
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#1C278C" />

    <!-- Your Color: #1a21d9 (Darker Blue for Hover) -->
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#1a21d9" />

    <!-- 3. SECONDARY ACTIONS (Chips, Filters) -->
    <!-- Your Color: #008169 (Teal) -->
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#09AE25" />

    <!-- 4. SELECTION & HIGHLIGHTS -->
    <!-- Your Color: #0077ba -->
    <SolidColorBrush x:Key="HighlightBrush" Color="#80256A90" />

    <!-- 5. STATUS / FOOTER -->
    <!-- Your Color: #24852d (Green) -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#24852d" />

    <!-- 6. TEXT COLORS -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#AAAAAA" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="#888888" />

    <!-- 7. DATAGRID SPECIFIC -->
    <SolidColorBrush x:Key="RowBackgroundBrush" Color="#252525" />
    <SolidColorBrush x:Key="AltRowBackgroundBrush" Color="#2A2A2A" />
    <SolidColorBrush x:Key="GridLineBrush" Color="#444444" />
</ResourceDictionary>